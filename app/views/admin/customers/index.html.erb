<%= render "admin/genres/list", genres:@genres %>

<main>
<div class="container">
  <div class="row">
    <div class="title col-8 mt-5 mb-5">
      <h5><span class="title-bg-color px-3">会員一覧</span></h5>
    </div>
  </div>
  
  <div class="row">
      <div class="col-10 ml-auto">
          <table class="table">
              <thead class="bg-light">
                  <tr>
                      <th>会員ID</th>
                      <th>氏名</th>
                      <th>メールアドレス</th>
                      <th>ステータス</th>
                  </tr>
              </thead>
              <tbody>
                  <% @customers.each do |customer| %>
                  <tr>
                      <td><%= customer.id %></td>
                      <td>
                          <%= link_to customer.full_name, admin_customer_path(customer.id) %>
                      </td>
                      <td><%= customer.email %></td>
                      <td>
                          <% if customer.is_deleted == false %>
                              <strong class="text-success"><%= "有効" %></strong>
                          <% else %>
                              <strong class="text-secondary"><%= "退会" %></strong>
                          <% end %>
                      </td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
          <%= paginate @customers %>
      </div>
  </div>
  
  
  
  
  
  
</div>
    
    
</main>