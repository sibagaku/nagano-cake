<%= render "list", genres:@genres %>

<main>
<div class="container">
  <div class="row">
    <div class="title col-8 mt-5 mb-5">
      <h5><span class="bg-light">ジャンル編集</span></h5>
    </div>
  </div>
</div>
    
<div class="container">
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
  <div class="genre-form-group">
    <div class="row">
      <div class="col-6 d-flex justify-content-between align-items-center">
          <%= f.label :ジャンル名, class:"mb-0 "%>
          <%= f.text_field :name %>
          <%= f.submit"変更を保存", class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
    
</main>