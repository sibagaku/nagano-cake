<%= render "list", genres:@genres %>

<main>
<div class="container">
  <div class="row">
    <div class="col-4 mt-5 mb-5 d-flex justify-content-center">
      <h5><span class="bg-light">ジャンル一覧・追加</span></h5>
    </div>
  </div>
</div>

<div class="container">
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-6 mb-5 ml-3 d-flex justify-content-between align-items-center">
          <%= f.label :ジャンル名, class:"mb-0 "%>
          <%= f.text_field :name, placeholder:"ジャンル名"%>
          <%= f.submit"新規登録", class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-5 d-flex align-items-center">
    <table class="table table-hover table-inverse">
      <thead class="bg-light">
        <tr>
          <th style="width: 10%"></th>
          <th style="width: 60%">ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td colspan="2"><%= genre.name %></td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

</main>