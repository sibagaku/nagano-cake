<%= render "public/homes/list", homes:@homes %>

<div class="container">
  <div class="row">
    <div class="title col-8 mt-5 mb-5">
      <h5><span class="title-bg-color px-3">配送先登録/一覧</span></h5>
    </div>
  </div>
  
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
      <div class="row mb-2">
          <div class="col-3">
              <%= f.label :"郵便番号(ハイフンなし)" %>
          </div>
          <div class="col-9 px-0">
              <%= f.text_field :postal_code, placeholder:"0000000000" %>
          </div>
      </div>
      
      <div class="row mb-2">
          <div class="col-3">
              <%= f.label :"住所" %>
          </div>
          <div class="col-7 px-0">
              <%= f.text_field :address, style:"width:100%;", placeholder:"東京都渋谷区代々木神園町0-0" %>
          </div>
      </div>
      
      <div class="row" style="margin-bottom:80px;">
          <div class="col-3">
              <%= f.label :"宛名" %>
          </div>
          <div class="col-5 px-0">
              <%= f.text_field :name, placeholder:"令和道子" %>
          </div>
          <div class="col-4 px-0 d-flex justify-content-end">
              <%= f.submit"新規登録", class:"btn btn-success", style:"width:140px;" %>
          </div>
      </div>
  <% end %>
  
  <div class="row">
      <div class="col-10 px-0">
          <table border="1" bordercolor="black" width="100%">
              <thead class="bg-light">
                  <tr>
                      <th style="width: 15%", class="py-3 pl-1">郵便番号</th>
                      <th style="width: 40%", class="py-3 pl-1">住所</th>
                      <th style="width: 15%", class="py-3 pl-1">宛名</th>
                      <th style="width: 30%, class="py-3 pl-1""></th>
                  </tr>
              </thead>
              <tbody>
                  <% @addresses.each do |address| %>
                  <tr>
                      <td class="align-middle px-0 pl-1 py-3"><%= address.postal_code %></td>
                      <td class="align-middle px-0 pl-1"><%= address.address %></td>
                      <td class="align-middle px-0 pl-1"><%= address.name %></td>
                      <td>
                          <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success btn-sm mr-2 ml-3", style:"width:90px;" %>
                          <%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger btn-sm", style:"width:90px;" %>
                      </td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
  </div>
  
  
  
  
  
</div>