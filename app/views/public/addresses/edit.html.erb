<%= render "public/homes/list", homes:@homes %>

<div class="container">
  <div class="row">
    <div class="title col-8 mt-5 mb-5">
      <h5><span class="title-bg-color px-3">配送先編集</span></h5>
    </div>
  </div>
  
  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
  <div class="row mb-2">
      <div class="col-3 px-0">
          <%= f.label :"郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-9 px-0">
          <%= f.text_field :postal_code %>
      </div>
  </div>
  
  <div class="row mb-2">
      <div class="col-3 px-0">
          <%= f.label :"住所" %>
      </div> 
      <div class="col-6 px-0">
          <%= f.text_field :address, style:"width:100%;" %>
      </div>
  </div>
  
  <div class="row">
      <div class="col-3 px-0">
          <%= f.label :"宛名" %>
      </div>
      <div class="col-6 px-0">
          <%= f.text_field :name %>
      </div>
      <div class="col-3">
          <%= f.submit"変更内容を保存", class:"btn btn-success", style:"width:140px;" %>
      </div>
  </div>
  

  <% end %>
</div>