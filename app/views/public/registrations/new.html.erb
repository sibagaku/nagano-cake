<%= render "public/homes/list", homes:@homes %>

<div class="container">
  <div class="row">
    <div class="title col-8 mt-5 mb-5">
      <h5><span class="title-bg-color px-3">新規会員登録</span></h5>
    </div>
  </div>


<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class="row mb-2">
      <div class="col-2 px-0">
        <%= f.label :"名前" %>
      </div>
      <div class="col-10">
        (姓)　 <%= f.text_field :last_name, placeholder:"令和", class:"mr-5" %>
        (名)　 <%= f.text_field :first_name, placeholder:"道子" %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-2">
      <div class="col-2 px-0">
        <%= f.label :"フリガナ" %>
      </div>
      <div class="col-10">
        (セイ) <%= f.text_field :last_name_kana, placeholder:"レイワ", class:"mr-5" %>
        (メイ) <%= f.text_field :first_name_kana, placeholder:"ミチコ" %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-2">
      <div class="col-2 px-0">
        <%= f.label :"メールアドレス" %>
      </div>
      <div class="col-5">
        <%= f.text_field :email, class:"new-information", placeholder:"sample@example.com" %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-2">
      <div class="col-2 px-0">
        <%= f.label :"郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-5">
        <%= f.text_field :postal_code, class:"new-information", placeholder:"0000000" %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-2">
      <div class="col-2 px-0">
        <%= f.label :"住所" %>
      </div>
      <div class="col-7">
        <%= f.text_field :address, class:"new-information address-form ", placeholder:"東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-2">
      <div class="col-2 px-0">
        <%= f.label :"電話番号(ハイフンなし)" %>
      </div>
      <div class="col-5">
        <%= f.text_field :telephone_number, class:"new-information", placeholder:"0000000000" %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-2">
      <div class="col-2 px-0">
        <%= f.label :"パスワード(6文字以上)" %>
      </div>
      <div class="col-5">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class:"new-information" %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="row mb-4">
      <div class="col-2 px-0">
        <%= f.label :"パスワード(確認用)" %>
      </div>
      <div class="col-5">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"new-information" %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row">
      <div class="col-2"></div>
      <div class="c0l-8">
        <div class="actions ml-5">
          <%= f.submit "新規登録",class:"btn btn-sm btn-success sign-btn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>



  <div class="row">
    <div class="title col-7 mt-5">
      <h5><span class="title-bg-color px-3">既に登録済みの方</span></h5>
      <div class="col-12 ml-3">
        <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
      </div>
    </div>
  </div>
  
</div>
