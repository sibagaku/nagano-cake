<%= render "public/homes/list", homes:@homes %>

<div class="container">
  <div class="row mt-5">
    <div class="col-2 px-0 mr-5">
        <div class="col-12 text-center border-top border-right border-left border-dark">
          <strong>ジャンル検索</strong>
        </div>
      
            <div class="col-12 px-0 border border-dark", style="height:270px;">
            <table>
                <tbody>
                    <% @genres.each do |genre| %>
                      <tr>
                        <td class="pl-3 py-1"><%= genre.name %></td>
                      </tr>
                    <% end %>
                </tbody>
            </table>
            </div>
    </div>
    
    
        <div class="col-8 px-0">
            <section><strong class="item-box">商品一覧</strong>（全<%= @items.count %>件）</section>
            
            <div class="row">
                <% @item_lists.each do |item| %>
                <div class="col-3 p-1 px-0 item-list">
                    <div>
                        <%= link_to item_path(item.id) do %>
                           <%= image_tag item.image, class:"item-list-image" %>
                        <% end %>
                    </div>
                    <div class="item-list-text">
                        <%= item.name %><br>
                        <%= ((item.price)*1.1).floor %>
                    </div>
                </div>
                <% end %>
            </div>
            
            <div class="row">
                <div class="col-8 mx-auto">
                    <%= paginate @item_lists %>
                </div>
            </div>
            
        </div>
    
    </div>
</div>