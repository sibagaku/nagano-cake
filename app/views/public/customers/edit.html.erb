<%= render "public/homes/list", homes:@homes %>

<div class="container">
  <div class="row">
    <div class="title col-8 mt-5 mb-5">
      <h5><span class="title-bg-color px-3">会員情報編集</span></h5>
    </div>
  </div>
  
  <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
  
  <div class="field">
    <div class="row mb-3">
      <div class="col-2 px-0">
        <%= f.label :"氏名" %>
      </div>
      <div class="col-10">
        <%= f.text_field :last_name, class:"mr-5" %>
        <%= f.text_field :first_name %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-3">
      <div class="col-2 px-0">
        <%= f.label :"フリガナ" %>
      </div>
      <div class="col-10">
        <%= f.text_field :last_name_kana, class:"mr-5" %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-3">
      <div class="col-2 px-0">
        <%= f.label :"郵便番号" %>
      </div>
      <div class="col-10">
        <%= f.text_field :postal_code %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-3">
      <div class="col-2 px-0">
        <%= f.label :"住所" %>
      </div>
      <div class="col-8">
        <%= f.text_field :address, style:"width:100%;" %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-3">
      <div class="col-2 px-0">
        <%= f.label :"電話番号" %>
      </div>
      <div class="col-10">
        <%= f.text_field :telephone_number %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-4">
      <div class="col-2 px-0">
        <%= f.label :"メールアドレス" %>
      </div>
      <div class="col-10">
        <%= f.text_field :email %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row mb-2">
      <div class="col-2 px-0"></div>
      <div class="col-5">
        <%= f.submit"編集内容を保存", class:"btn btn-success", style:"width:80%;" %>
      </div>
      <div class="col-4">
          <%= link_to "退会する", unsubscribe_path, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
  
  
  <% end %>
  
  
  
  
</div>